#nav
  margin-top 0px !important
  padding 15px
  height 10%
  background-color canvas
  position fixed
  width 100%
  & .navigation ul
    list-style none !important
    list-style-type none !important
    width 100%
    float right
    padding 0px
    margin 0 auto
    & li
      float left
      &::before
        display none
.nav-link
  text-decoration none
  color black
  &:hover
    text-decoration none
    color primary

.nav-container
  height 100%
  width 100%
